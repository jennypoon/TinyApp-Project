  <body style="font-size:15px; padding:50px;">
    <header>
    <h1>Tiny App Project</h1>
    </header>
      <hr width="600px" align="left">
    <!-- User logged In -->
      <% if (userObj) { %>
        <form action ="/logout" method="POST">
          <i>You are currently logged in as: <%= userObj.email %></i>
          <button> Logout </button> <br>
