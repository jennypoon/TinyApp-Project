
<!DOCTYPE html>
<html lang="en">

<body>
  <% include partials/_header %>
  <div style="display:inline-block; vertical-align: middle;">
    <button onclick="location.href='/urls/new'">Create A New Link</button>
  </div>
  <ul>
    <div>
      <% for (let indivUrl in urls) { %>
      <li><%= indivUrl %> -> <a href="<%= urls[indivUrl] %>"><%= urls[indivUrl]['longURL'] %></a>
      <a href="/urls/<%= indivUrl %>">Edit Link</a>
      <form method="POST" style="display:inline;" action="/urls/<%= indivUrl %>/delete">
        <button>Delete Link</button>
      </form>
      </li>
      <% }; %>
    </div>
  </ul>
</body>

</html>